@model Restaurant
@{
    ViewData["Title"] = "Create";
}

<div class="container px-5">
    <form method="post" asp-action="Create">
        <div class="mb-3">
            <label class="form-label" asp-for="RestaurantName">Restaurant Name</label>
            <input asp-for="RestaurantName" class="form-control" id="restaurantName" type="text"  />
            <span class="text-danger" asp-validation-for="RestaurantName"></span>
            @*<div class="invalid-feedback" data-sb-feedback="restaurantName:required">Restaurant Name is required.</div>*@
        </div>
        <div class="mb-3">
            <label class="form-label" asp-for="Address">Address</label>
            <textarea asp-for="Address" class="form-control"  ></textarea>
            @*<div class="invalid-feedback" data-sb-feedback="address:required">Address is required.</div>*@
            <span class="text-danger" asp-validation-for="Address"></span>

        </div>
        <div class="mb-3">
            <label asp-for="RestaurantRating">Rating</label>
            <input asp-for="RestaurantRating" class="form-control" id="rating" type="number" />
            @*<div class="invalid-feedback" data-sb-feedback="rating:required">Rating is required.</div>*@
            <span class="text-danger" asp-validation-for="RestaurantRating"></span>

        </div>
        <div class="mb-3">
            <label  asp-for="RestaurantImage">Image</label>
            <input asp-for="RestaurantImage" class="form-control" id="image" type="file"  />
            @*<div class="invalid-feedback" data-sb-feedback="image:required">Image is required.</div>*@
            <span class="text-danger" asp-validation-for="RestaurantImage"></span>


        </div>
        @*<div class="d-none" id="submitSuccessMessage">
            <div class="text-center mb-3">  
                <div class="fw-bolder">Added Restaurent Successfully!!</div>
                 </div>
        </div>
        <div class="d-none" id="submitErrorMessage">
            <div class="text-center text-danger mb-3">Error sending message!</div>
        </div>*@
        <div class="d-flex">
            <button class="btn btn-primary btn-lg mr-4" type="submit">Submit</button>

            <a asp-controller="Restaurant" asp-action="Index" class="btn btn-danger btn-lg ">Cancle</a>
        </div>
    </form>
</div>
@*<script src="https://cdn.startbootstrap.com/sb-forms-latest.js"></script>*@
@section Scripts
{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}
